<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/inspired_by_textview"
                android:text="@string/inspired_by"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:textColor="@color/lightGrey"
        />

        <TextView
                android:id="@+id/tap_to_learn_textview"
                android:text="@string/tap_to_learn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp"
                android:textColor="@color/lightGrey"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <Button
                android:id="@+id/visit_moma_button"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/visit_moma"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/not_now_button"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/not_now"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"/>
        </LinearLayout>

</LinearLayout>